{
    "name": "gei-bill-app",
    "productName": "gei-bill-app",
    "version": "1.0.1",
    "description": "My Electron application description",
    "main": "src/index.js",
    "scripts": {
        "g": "gulp",
        "e": "electron .",
        "start": "start gulp && electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "lint": "eslint src",
        "dist": "electron-builder -w",
        "build-scss": "node-sass css/scss --output css/scss",
        "watch-scss": "node-sass --watch css/scss --output css/scss"
    },
    "keywords": [],
    "author": "Joe",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "nsis"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn"
            },
            "electronWinstallerConfig": {
                "name": "gei_bill_app"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "geibillapp"
            }
        }
    },
    "dependencies": {
        "electron-settings": "^3.1.1",
        "exceljs": "^1.12.1",
        "jquery": "^3.1.0",
        "mousetrap": "^1.6.1"
    },
    "devDependencies": {
        "electron": "^15.5.5",
        "electron-builder": "^20.38.5",
        "node-sass": "^4.12.0"
    },
    "build": {
        "appId": "com.electron.geibiller",
        "productName": "GEI Biller",
        "asar": true,
        "asarUnpack": [
            "src/res/bill-template.xlsx"
        ],
        "win": {
            "target": "nsis"
        },
        "nsis": {}
    }
}
